<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hexaenna.avm.DownloadActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certifications of AVM LABS"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/nabl_logo"
    android:layout_gravity="center"
    android:paddingTop="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NABL CERTIFICATION - Cert No: CC-2088"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Granted by the National Accreditation Board for Testing and Calibration Laboratories [NABL]
Schedule of Best Measurement Capability &amp; Accreditation Certificate"
        android:textSize="13sp"
        android:padding="10dp"
        android:textColor="@color/oil"/>
</LinearLayout>
